mixin Conference(item, size)
  article.conference(class=`${size ? 'conference-' + size : ''}${item.commercial ? ' conference-commercial' : ''}`)
    if (size !== 'past')
      if (size === 'alt-dates')
        .conference_dates.conference_dates--new
          .conference_date
            span.conference_date_small с
            span.conference_date_big 31
            span.conference_date_small Января
          .conference_date
            span.conference_date_small по
            span.conference_date_big 6
            span.conference_date_small Февраля
      else
        .conference_dates
          span.conference_dates_big= item.dates
          span.conference_dates_small= item.mounth
    .conference_preview
      img(src=item.preview, alt=item.title)
    .conference_content
      a.conference_title(href=`${item.url && item.url !== '#' ? item.url : 'conference-full.html'}`)= item.title
      .conference_location
        b= item.city
        span /
        p= item.country
      .conference_tags
        each tag in item.tags
          span.conference_tag= tag
      if (size === 'past')
        +Stars({text: 'Общий рейтинг', count: 5})
      .conference_actions
        +Btn(`Подробнее`, [`${item.commercial ? 'default-alt' : 'default'}`, 'sm', 'f14'])
        if (size !== 'past')
          +Btn(`Промокод`, [`${item.commercial ? 'default-alt' : 'default'}`, 'sm', 'f14'])
    if (size === 'mini')
      .conference_actions.mini
        +Btn(`Подробнее`, [`${item.commercial ? 'commercial' : 'default'}`, 'mini', 'f14'])
        +Btn(`Промокод`, [`${item.commercial ? 'commercial' : 'default'}`, 'mini', 'f14'])

