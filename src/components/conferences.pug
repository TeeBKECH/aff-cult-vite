mixin Conferences(items = [], size = '', title = 'Конференции:')
  .conferences(class=`${size ? 'conferences-' + size : ''}`)
    .conferences_title
      if (size === 'mini')
        span.sidebar_title= title
        button.conferences_calendar(data-fn-calendar-open='calendar-show')
          svg.conferences_calendar_icon(viewBox="0 0 24 24" width="24" height="24")
            use(href=`assets/images/svg/menu-sprite.svg#calendar-icon`)
      else
        h2.title.title-h2= title
    .conferences_items
      each item in items
        +Conference(item, size)
    .conferences_atcions
      a.conferences_more(href="#") Показать все...
    