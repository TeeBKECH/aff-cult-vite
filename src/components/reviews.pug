mixin ReviewsAddForm(props, variant = false, title = 'Оставить отзыв')
  - const {auth = true} = props
  .reviews_wrapper
    .reviews_top.reviews_top-alt
      h3.title.title-h3= title
    form.reviews_form_wrapper
      if (variant)
        .reviews_form.reviews_form-alt
          .reviews_form_inputs.reviews_form_inputs-alt2
            textarea.reviews_form_input.reviews_form_input-alt2.reviews_form_input--text(name="", placeholder='Ваш отзыв...')
            +Btn('Оставить отзыв', [`primary`, 'md', 'f16'])
        a.show_all(href='#') Все отзывы
      else
        .reviews_form_author
          if (auth)
            +AuthorReviw({avatar: 'assets/images/svg/avatar.svg', author: 'AFF CULT'})
          else
            .reviews_form_avatar
              img(src='assets/images/svg/avatar-placeholder.svg', alt='placeholder img')
            .reviews_form_inputs.reviews_form_inputs-alt
              input.reviews_form_input.reviews_form_input--name(type='text', placeholder='Имя')
              input.reviews_form_input.reviews_form_input--email(type='text', placeholder='E-mail')
              input.reviews_form_input.reviews_form_input--phone(type='text', placeholder='Телефон')
              input.reviews_form_input.reviews_form_input--tg(type='text', placeholder='Telegram @')
        .reviews_form
          .reviews_form_rates
            +Stars({text: 'Прибыльность', count: 0, name: 'val-1', type: 'unlock'})
            +Stars({text: 'Прибыльность', count: 0, name: 'val-2', type: 'unlock'})
            +Stars({text: 'Прибыльность', count: 0, name: 'val-3', type: 'unlock'})
            +Stars({text: 'Прибыльность', count: 0, name: 'val-4', type: 'unlock'})
          .reviews_form_inputs
            input.reviews_form_input.reviews_form_input--title(type='text', placeholder='Тема (0/60)')
            textarea.reviews_form_input.reviews_form_input--text(name="", placeholder='Ваш отзыв...')
          .reviews_form_action
            +Btn('Оставить отзыв', [`primary`, 'md', 'f16'])