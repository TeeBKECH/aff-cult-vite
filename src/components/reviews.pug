mixin Reviews(props)
  .reviews_wrapper
    .reviews_top
      h3.title.title-h3 Отзывы
      +Btn('Оставить отзыв', [`primary`, 'md', 'f16'])
    .reviews_tabs
      .reviews_tab
        button.reviews_tab_btn.reviews_tab_btn--active.reviews_tab_btn--neutral
          span Все
          b 25 
      .reviews_tab
        button.reviews_tab_btn.reviews_tab_btn--positive
          span Положительные
          b 24 
      .reviews_tab
        button.reviews_tab_btn.reviews_tab_btn--neutral
          span Нейтральные
          b 0 
      .reviews_tab
        button.reviews_tab_btn.reviews_tab_btn--negative
          span Отрицательные
          b 1 
    .reviews_items
      .reviews_item.reviews_item--positive
        .reviews_item_author
          +AuthorReviw({avatar: 'assets/images/svg/avatar.svg', author: 'AFF CULT'})
        .reviews_item_content
          .reviews_item_stars
            +Stars({text: 'Прибыльность', count: 2})
            +Stars({text: 'Саппорт', count: 7})
            +Stars({text: 'Надежность', count: 1})
            +Stars({text: 'Промо-материалы', count: 10})
