doctype html
html(lang="ru")
  // page — объект из templateParameters (см. webpack.config.js)
  +Head(page)

  body.body

    // Modal Search Results
    +Modal('search-results')
      .modal_box
        +SearchResults()

    // Modal Menu
    +Modal('mobile-menu')
      .modal_box
        +Search({modal: true})
      .modal_box
        +Menu([
          { title: 'Статьи', href: 'posts.html', icon: 'posts' },
          { title: 'Медиа', href: 'media.html', icon: 'media' },
          { title: 'Конференции', href: 'conferences.html', icon: 'conf' },
          { title: 'Партнерки', href: 'partners.html', icon: 'partners' },
          { title: 'Сервисы', href: 'services.html', icon: 'services' },
          { title: 'Инфлюенсеры', href: 'influencers.html', icon: 'infl' },
          { title: 'Вики', href: 'wiki.html', icon: 'wiki' },
          { title: 'Арбитражные команды', href: 'commands.html', icon: 'commands' },
          { title: 'Telegram-каналы', href: 'tg-channels.html', icon: 'tg' },
          { title: 'Вакансии', href: 'vacancies.html', icon: 'vacancies' },
          { title: 'Журнал', href: 'magazine.html', icon: 'magazine' },
        ], 0)

    // Modal Topic
    +Modal('mobile-topic')
      .modal_box
        span.sidebar_title Темы
        +Topic([
            { title: 'Google Ads', color: "#06B0FF", href: 'posts-topic.html' },
            { title: 'Блоги', color: "#06FF82", href: '' },
            { title: 'Досье', color: "#FFB406", href: '' },
            { title: 'Кейсы', color: "#FF5506", href: '' },
            { title: 'Обзор', color: "#FF0606", href: '' },
            { title: 'Обучение', color: "#4D06FF", href: '' },
            { title: 'Полезное', color: "#8BFF06", href: '' },
            { title: 'Правила', color: "#FF0606", href: '' },
            { title: 'Спор', color: "#FF9B06", href: '' },
            { title: 'Журнал', color: "#06B0FF", href: '' },
          ], 5)
        span.sidebar_more Показать все

    //- +AdBanner({href: 'https://google.com', banner: 'assets/images/public/banner-top.jpg', title: 'Рекламный баннер'})
    .page
      include ../components/header.pug
      .container.content
        +Sidebar({})
          // Main Menu
          +Box({})
            +Menu([
                { title: 'Статьи', href: 'posts.html', icon: 'posts' },
                { title: 'Медиа', href: 'media.html', icon: 'media' },
                { title: 'Конференции', href: 'conferences.html', icon: 'conf' },
                { title: 'Партнерки', href: 'partners.html', icon: 'partners' },
                { title: 'Сервисы', href: 'services.html', icon: 'services' },
                { title: 'Инфлюенсеры', href: 'influencers.html', icon: 'infl' },
                { title: 'Вики', href: 'wiki.html', icon: 'wiki' },
                { title: 'Арбитражные команды', href: 'commands.html', icon: 'commands' },
                { title: 'Telegram-каналы', href: 'tg-channels.html', icon: 'tg' },
                { title: 'Вакансии', href: 'vacancies.html', icon: 'vacancies' },
                { title: 'Журнал', href: 'magazine.html', icon: 'magazine' },
              ], 1)
          // Ad Banner
          +AdBanner({href: 'https://google.com', banner: 'assets/images/public/banner-left.jpg', title: 'Рекламный баннер', type: 'sidebar'})
          // Alt Menu
          +Box({})
            +Menu([
                { title: 'О проекте', href: '#' },
                { title: 'Реклама', href: '#' },
                { title: 'Правила', href: '#' }
              ], 100, 'alt')
        main.main(data-widget=`${page.slug == 'wiki' ? "wiki" : false}`)
          .player-picker-modal#playerPickerModal(aria-hidden="true" role="dialog" aria-modal="true")
            .player-picker-modal__backdrop(data-close-modal-alt="")
            .player-picker-modal__dialog(role="document")
              button.player-picker-modal__close(type="button" data-close-modal-alt="" aria-label="Закрыть") ×
              h3.player-picker-modal__title Выберите плеер
              .player-picker-modal__grid
                button.player-picker-modal__option(type="button" data-provider="youtube") YouTube
                button.player-picker-modal__option(type="button" data-provider="vk") VK Видео
              //- p.player-picker-modal__hint
              //-   | Источник можно задать через атрибуты 
              //-   code data-youtube
              //-   |  и 
              //-   code data-vk
              //-   |  на блоке 
              //-   code .post_media
              //-   | .
          block content
        block sidebar-r
      include ../components/footer.pug

    // Modal form send success
    +Modal('form-sended', 'center')
      .modal_box.modal_box--alt
        .modal_close(data-close) &times;
        +FormSended()

    // Modal form Representative
    +Modal('form-representative', 'center')
      .modal_box.modal_box--alt
        .modal_close(data-close) &times;
        +Form({title: 'Стать представителем', subTitle: "Пройдите верификацию", type: 'representative'})

    // Modal form Mostake
    +Modal('form-mistake', 'center')
      .modal_box.modal_box--alt
        .modal_close(data-close) &times;
        +Form({title: 'Сообщить об ошибке', subTitle: "опишите ошибку", type: 'mistake'})
    
    // Modal form Command
    +Modal('form-command', 'center')
      .modal_box.modal_box--alt
        .modal_close(data-close) &times;
        +Form({title: 'Запрос на добавление', subTitle: "Заполните поля формы", type: 'command'})